<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:text="@string/legend_first"
	        />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FFFFFF00"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="turning the LED on (1st time)"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FFF9A825"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="turning the LED on (multiple times)"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FF006064"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="waiting"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FF7C4DFF"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="turning the LED off (1st time)"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FF4527A0"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="turning the LED off (multiple times)"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8dp"
	        >
	        <View
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_gravity="center_vertical"
	            android:background="#FF006064"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="waiting"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="8dp"
	            />
	    </LinearLayout>
	
	</LinearLayout>

</ScrollView>