<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/back_layer"
    android:minHeight="2000dp"
    android:minWidth="2000dp">
    
    
    <View
        android:layout_height="1dp"
        android:layout_width="1dp"
        android:id="@+id/focus_catch"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FF00C0C0"
        />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="Flashes"
            android:textSize="18sp"
            android:background="#FF004040"
            android:gravity="center"
            android:id="@+id/flashes"
            />
        
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#FF00C0C0"
            />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="Delay"
            android:textSize="18sp"
            android:background="#00000000"
            android:gravity="center"
            android:id="@+id/delay"
            />
        
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#FF00C0C0"
            />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="Pattern"
            android:textSize="18sp"
            android:background="#00000000"
            android:gravity="center"
            android:id="@+id/pattern"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            android:layout_weight="1"
            android:id="@+id/flashes_underline"
            />
        
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            android:layout_weight="1"
            android:id="@+id/delay_underline"
            />
        
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            android:layout_weight="1"
            android:id="@+id/pattern_underline"
            />
        
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/delay_controls"
        android:layout_marginTop="5dp"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF808080"
            android:text="Delay method:"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
	        android:layout_marginBottom="1dp"
            />
        
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF00C0C0"
            />
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:textColor="#FFFFFFFF"
	            android:text="Skipped flashes"
	            android:textSize="18sp"
	            android:background="#FF004040"
	            android:gravity="center"
	            android:id="@+id/skipped"
	            />
	        
	        <View
	            android:layout_width="1dp"
	            android:layout_height="40dp"
	            android:background="#FF00C0C0"
	            />
	        
	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:textColor="#FFFFFFFF"
	            android:text="Time delay"
	            android:textSize="18sp"
	            android:background="#00000000"
	            android:gravity="center"
	            android:id="@+id/time"
	            />
	        
	    </LinearLayout>
    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:background="#FF00C0C0"
	            android:layout_weight="1"
	            android:id="@+id/skipped_underline"
	            />
	        
	        <View
	            android:layout_width="1dp"
	            android:layout_height="1dp"
	            android:background="#FF00C0C0"
	            />
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:background="#FF00C0C0"
	            android:layout_weight="1"
	            android:id="@+id/time_underline"
	            />
	        
	        
	    </LinearLayout>
        
        
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pattern_controls"
        android:orientation="vertical"
        >
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pattern_list"
            />
            
    </LinearLayout>
        
        
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/time_controls"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FF808080"
	            android:text="Enter delay:"
	            android:textSize="16sp"
	            android:layout_marginLeft="3dp"
		        android:layout_marginBottom="1dp"
		        android:layout_marginTop="5dp"
	            />
            
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            >
	            
	            <EditText
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:inputType="number"
	                android:id="@+id/time_edit_text"
				    android:nextFocusLeft="@+id/focus_catch"
				    android:nextFocusUp="@+id/focus_catch"
				    android:nextFocusForward="@+id/focus_catch"
				    android:nextFocusRight="@+id/focus_catch"
				    android:nextFocusDown="@+id/focus_catch"
					android:imeOptions="actionDone"
	                />

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#FF808080"
		            android:text="ms"
		            android:textSize="16sp"
		            android:layout_marginLeft="3dp"
		            />
	            
	        </LinearLayout>
            
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                />
	        
        </LinearLayout>
        
        
    </ScrollView>
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/flash_controls"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
	        
			<RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="40dp"
            	android:id="@+id/inner_flash_controls"
		        >
		        
		        
				<EditText
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="14.25"
				    android:textSize="36sp"
				    android:textColor="#FFFFFFFF"
				    android:paddingLeft="30dp"
				    android:layout_marginTop="10dp"
				    android:id="@+id/frequency_text"
				    android:singleLine="true"
				    android:inputType="numberDecimal"
				    android:background="@android:color/transparent"
				    android:nextFocusLeft="@+id/focus_catch"
				    android:nextFocusUp="@+id/focus_catch"
				    android:nextFocusForward="@+id/focus_catch"
				    android:nextFocusRight="@+id/focus_catch"
				    android:nextFocusDown="@+id/focus_catch"
					android:imeOptions="actionDone"
				    />
				
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text=" Hz"
				    android:textSize="36sp"
				    android:textColor="#FFFFFFFF"
				    android:layout_alignBaseline="@+id/frequency_text"
				    android:layout_toRightOf="@+id/frequency_text"
				    android:id="@+id/space_unit"
				    />
				
				<View
				    android:layout_width="0dp"
				    android:layout_height="0dp"
				    android:layout_alignParentBottom="true"
				    android:layout_marginBottom="90dp"
				    android:id="@+id/bottom_spacer"
				    />
				
				<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:layout_above="@+id/bottom_spacer"
				    android:textSize="17sp"
				    android:text="Toggle running"
				    android:id="@+id/running_button"
				    />
				
				<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:textSize="14sp"
				    android:layout_below="@+id/running_button"
				    android:text="Burst (5)"
				    android:id="@+id/burst_button"
				    android:layout_marginTop="10dp"
				    android:visibility="invisible"
				    />
				
				
				
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#FF00C0C0"
				    android:layout_below="@+id/frequency_text"
				    android:layout_marginTop="5dp"
		        	android:layout_marginLeft="5dp"
				    android:id="@+id/first_div"
				    />
				
			    <TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/first_div"
			    	android:layout_alignParentLeft="true"
			    	android:id="@+id/duty_text"
			    	android:text="Duty cycle:"
			    	android:layout_marginTop="10dp"
			    	android:layout_marginLeft="5dp"
			    	/>
			    <com.tp77.StrobeLib.ReversedSeekBar
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/duty_text"
			    	android:layout_marginLeft="30dip"
			    	android:layout_marginRight="30dip"
			    	android:id="@+id/duty_seek_bar"
			    	/>
			   <TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/duty_seek_bar"
			    	android:layout_alignRight="@+id/duty_seek_bar"
			    	android:id="@+id/duty_off"
			    	android:text="Off"
			    	/>
			   	<TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/duty_seek_bar"
			    	android:layout_toLeftOf="@+id/duty_off"
			    	android:layout_marginRight="6dip"
			    	android:id="@+id/cur_off_length"
			    	/>
			    <TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/duty_seek_bar"
			    	android:layout_centerHorizontal="true"
			    	android:id="@+id/duty"
			    	/>
			    <TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_below="@+id/duty_seek_bar"
			    	android:layout_alignLeft="@+id/duty_seek_bar"
			    	android:id="@+id/duty_on"
			    	android:text="On"
			    	/>
			   	<TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_alignBaseline="@+id/duty_on"
			    	android:layout_toRightOf="@+id/duty_on"
			    	android:layout_marginLeft="2dip"
			   	    android:padding="4dp"
			    	android:id="@+id/cur_on_length"
			    	/>
	   	
			   	
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#FF00C0C0"
				    android:layout_below="@+id/cur_off_length"
				    android:layout_marginTop="10dp"
		        	android:layout_marginLeft="5dp"
				    android:id="@+id/second_div"
				    />
			   	
			   	<CheckBox
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_below="@+id/second_div"
			   	    android:layout_marginTop="5dp"
			   	    android:layout_marginLeft="10dp"
			   	    android:text="Use saved ON length"
			   	    android:id="@+id/steady_check"
			   	    />
			   	
				
			   	
			   	<Button
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_below="@+id/steady_check"
			   	    android:layout_alignParentRight="true"
			   	    android:layout_marginRight="20dp"
			   	    android:text="Save ON length"
			   	    android:id="@+id/save_button"
			   	    android:textSize="14sp"
			   	    />
			   	
			   	
			   	<TextView
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_toLeftOf="@+id/save_button"
			   	    android:layout_alignBottom="@+id/save_button"
			   	    android:layout_marginRight="10dp"
			   	    android:text=" ms"
			   	    android:textColor="#FFFFFFFF"
			   	    android:textSize="14sp"
			   	    android:id="@+id/ms"
			   	    />
			   	
			   	
			   	<EditText
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_toLeftOf="@+id/ms"
			   	    android:layout_alignBottom="@+id/save_button"
					android:paddingLeft="3dp"
			   	    android:text="50"
			   	    android:id="@+id/saved_num"
				    android:singleLine="true"
				    android:inputType="numberDecimal"
				    android:background="@android:color/transparent"
				    android:nextFocusLeft="@+id/focus_catch"
				    android:nextFocusUp="@+id/focus_catch"
				    android:nextFocusForward="@+id/focus_catch"
				    android:nextFocusRight="@+id/focus_catch"
				    android:nextFocusDown="@+id/focus_catch"
					android:imeOptions="actionDone"
			   	    android:textColor="#FFFFFFFF"
			   	    android:textSize="14sp"
			   	    />
			   	
			   	
			   	<TextView
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_toLeftOf="@+id/saved_num"
			   	    android:layout_alignBottom="@+id/save_button"
			   	    android:text="Saved:"
			   	    android:textColor="#FFFFFFFF"
			   	    android:textSize="14sp"
			   	    />
			   	
			   	
				<View
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#FF00C0C0"
				    android:layout_below="@+id/ms"
				    android:layout_marginTop="10dp"
		        	android:layout_marginLeft="5dp"
				    android:id="@+id/third_div"
				    />
				
				
			   	<com.tp77.StrobeLib.MyNumberPicker
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_below="@+id/third_div"
			   	    android:layout_centerHorizontal="true"
			   	    android:id="@+id/flashes_picker"
			   	    android:layout_marginTop="10dp"
			   	    />
				
			   	<TextView
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_alignBottom="@+id/flashes_picker"
			   	    android:layout_toLeftOf="@+id/flashes_picker"
			   	    android:layout_marginBottom="5dp"
			   	    android:text="Flash"
			   	    android:textColor="#FFFFFFFF"
			   	    android:textSize="14sp"
			   	    />
			   	
			   	
			   	<TextView
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_alignBottom="@+id/flashes_picker"
			   	    android:layout_toRightOf="@+id/flashes_picker"
			   	    android:layout_marginBottom="5dp"
			   	    android:text="times"
			   	    android:textColor="#FFFFFFFF"
			   	    android:textSize="14sp"
			   	    />
			   	
			   	
			   	
			   	<Button
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_centerHorizontal="true"
			   	    android:layout_below="@+id/flashes_picker"
			   	    android:layout_marginTop="10dp"
			   	    android:text="     Test     "
			   	    android:id="@+id/test_button"
			   	    />
			   	
			   	<View
			   	    android:layout_width="0dp"
			   	    android:layout_height="10dp"
			   	    android:layout_below="@+id/test_button"
			   	    />
				
		    </RelativeLayout>            
	            
	            
	            
	            
		    <com.tp77.StrobeLib.VerticalSeekbar 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/inner_flash_controls"
		        android:layout_alignBottom="@+id/inner_flash_controls"
		        android:id="@+id/vertical_seekbar"
		        android:focusable="true"
		        android:focusableInTouchMode="true"
		        />
       
        </RelativeLayout>
    </ScrollView>
    
    
</LinearLayout>
