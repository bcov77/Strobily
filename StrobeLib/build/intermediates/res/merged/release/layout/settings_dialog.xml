<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	>
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:id="@+id/settings_linear_layout"
	  >  
	    <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Maximum frequency:"
	    	/>
	    <SeekBar
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:id="@+id/max_seek_bar"
	    	/>   
	    <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:id="@+id/max_text"
	    	/>
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Show fine tune"
	        android:id="@+id/fine_check"
	        />
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Show burst"
	        android:id="@+id/show_burst_check"
	        />
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Persist on app close"
	        android:id="@+id/persist_check"
	        />
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Performance hack"
	        android:id="@+id/performance_hack_check"
	        />
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gentle strobe"
	        android:id="@+id/multi_kill_check"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="(Might be better, might be worse)"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="-10dp"
	        android:textSize="12sp"
	        />
	    <TextView
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:text="Screen flash color:"
	    	/>
	    <SeekBar
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:id="@+id/color_seek_bar"
	    	/>   
	    <View
	    	android:layout_width="fill_parent"
	    	android:layout_height="40dip"
	    	android:layout_marginLeft="30dip"
	    	android:layout_marginRight="30dip"
	    	android:id="@+id/color_sample"
	    	/>
	    	
	    	
	</LinearLayout>
</ScrollView>
