<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	     >
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:text="@string/troubleshoot"
	        android:id="@+id/torch_text"
	        />
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/multi_kill_check"
	        android:layout_below="@+id/torch_text"
	        android:text="Gentle strobe"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/multi_kill_subtext"
	        android:layout_below="@+id/multi_kill_check"
	        android:textSize="10sp"
	        android:layout_marginLeft="4dp"
	        android:text="(Use with preview hack)"
	    	/>
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/preview_check"
	        android:layout_below="@+id/multi_kill_subtext"
	        android:text="Preview hack"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/preview_subtext"
	        android:layout_below="@+id/preview_check"
	        android:textSize="10sp"
	        android:layout_marginLeft="4dp"
	        android:text="(This usually works, but you won\'t be happy)"
	    	/>
	   <!--  
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/final_words"
	        android:layout_below="@+id/preview_subtext"
	        android:layout_marginTop="4dp"
	        android:textSize="14sp"
	        android:text="If the LED didn\'t work from the start, or if any of these made a difference (better or worse), please tell me. I want to fix this. (And I don\'t want the fix to break any phones that currently work.)"
	    	/>
	        --> 
	    
	</RelativeLayout>
</ScrollView>