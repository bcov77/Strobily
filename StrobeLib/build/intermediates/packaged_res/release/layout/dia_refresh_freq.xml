<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:textSize="14sp"
	        android:textColor="?android:textColorPrimary"
	        android:text="Faster refresh rates may hurt performance."
	        android:layout_marginBottom="8dp"
	        android:layout_marginTop="8dp"
	        />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:id="@+id/one"
	        android:background="@android:drawable/list_selector_background"
	        android:orientation="horizontal"
	        >
	        
			<CheckBox
			    android:layout_width="24dp"
			    android:layout_height="24dp"
			    android:id="@+id/one_check"
			    android:layout_gravity="center_vertical"
			    android:focusable="false"
			    android:clickable="false"
			    />
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="?android:textColorPrimary"
		        android:text="1 Hz"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:id="@+id/match"
	        android:background="@android:drawable/list_selector_background"
	        android:orientation="horizontal"
	        >
	        
			<CheckBox
			    android:layout_width="24dp"
			    android:layout_height="24dp"
			    android:id="@+id/match_check"
			    android:layout_gravity="center_vertical"
			    android:focusable="false"
			    android:clickable="false"
			    />
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="?android:textColorPrimary"
		        android:text="Match strobe Hz"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:id="@+id/touch"
	        android:background="@android:drawable/list_selector_background"
	        android:orientation="horizontal"
	        >
	        
			<CheckBox
			    android:layout_width="24dp"
			    android:layout_height="24dp"
			    android:id="@+id/touch_check"
			    android:layout_gravity="center_vertical"
			    android:focusable="false"
			    android:clickable="false"
			    />
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="?android:textColorPrimary"
		        android:text="On graph touch"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:id="@+id/custom"
	        android:background="@android:drawable/list_selector_background"
	        android:orientation="horizontal"
	        >
	        
			<CheckBox
			    android:layout_width="24dp"
			    android:layout_height="24dp"
			    android:id="@+id/custom_check"
			    android:layout_gravity="center_vertical"
			    android:focusable="false"
			    android:clickable="false"
			    />
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="?android:textColorPrimary"
		        android:text="Custom"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
	  
	    
	
	</LinearLayout>
</ScrollView>