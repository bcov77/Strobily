<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:textSize="16sp"
	        android:layout_marginLeft="5dp"
	        android:text="Display options:"
	        android:layout_marginTop="5dp"
	        />
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Use RPM"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/rpm_check"
	        />
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Show ×½ and ×2"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/x2_check"
	        />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="(Helpful for validating RPM measurements)"
	        />
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Show Diagnostic mode"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/diagnostic_check"
	        />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textColor="#FF808080"
			android:textSize="12sp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="(This is really helpful)"
			/>
	        
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Show real-time duty"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/realtime_check"
	        />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="(This may decrease performance)"
	        />
	    
	    
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="5dp"
	        android:background="#FF00C0C0"/>
	    
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:textSize="16sp"
	        android:layout_marginLeft="5dp"
	        android:text="Performance options:"
	        />
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Use multi commands"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/multi_check"
	        />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="(Try this if the LED is inconsistent)"
	        />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/performance_hack_stuff"
			android:orientation="vertical"
			>
			<CheckBox
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:text="Performance hack"
				android:layout_marginLeft="10dp"
				android:id="@+id/performance_check"
				/>

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textColor="#FF808080"
				android:textSize="12sp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:text="(If this works, the LED consistency will increase. However, you may have to restart your phone if it doesn\'t)"
				/>
		</LinearLayout>
	    
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:text="Full cpu"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/full_cpu_check"
	        />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="(This increases consistency at the cost of battery life, useful for low Hz)"
	        />
	    
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="5dp"
	        android:background="#FF00C0C0"/>
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:textSize="16sp"
	        android:layout_marginLeft="5dp"
	        android:text="Stroboscope tweaks:"
	        />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	   	    android:text="These are very subtle tweaks for those who wish to get the highest precision possible from their LED"
	   	    android:layout_marginTop="5dip"
	   	    />
	    
	   	<TextView
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	        android:textSize="14sp"
	   	    android:text="Late flash rejection threshold:"
	   	    android:layout_marginTop="5dip"
		    android:layout_marginLeft="10dp"
	   	    />
	   	
		<SeekBar
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="30dip"
	   	    android:layout_marginRight="30dip"
	    	android:id="@+id/late_flash_seek_bar"
	    	/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	   	    android:layout_gravity="center_horizontal"
		    android:id="@+id/late_flash_text"
		    />
		
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="(This is how late a flash can be before it gets skipped. Set this as low as possible.)"
	        />
	    
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="10dp"
	        android:textSize="14sp"
		    android:text="Flash preempt:"
		    /> 	
		<SeekBar
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="30dip"
	   	    android:layout_marginRight="30dip"
	    	android:id="@+id/flash_preempt_seek_bar"
	    	/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:id="@+id/flash_preempt_text"
		    />
		
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textColor="#FF808080"
	        android:textSize="12sp"
	        android:layout_marginLeft="5dp"
	        android:text="(This adjusts multithread timing. Adjust this until the flashes are consistent.)"
	        />
	
	    
	    <View
	        android:layout_width="0dp"
	        android:layout_height="10dp"
	        />
	    
	    
	</LinearLayout>
</ScrollView>